    (function(){
        var version = "{{page.componentVersion.displayVersion}}"

        var interface_versions = [
            'stable7',
            'early',
            'beta7'
        ]

        if(!interface_versions.includes(version))
        {
            version = interface_versions[0];
        }

        docsearch({
            apiKey: '3c1a0708184b01efeebc6ab288f94dc2',
            indexName: 'plenty_developers_en',
            inputSelector: '#search-input',
            appId: 'HET8OH1LPP',
            debug: true,
            algoliaOptions: {
                hitsPerPage: 10,
                'facetFilters': [
                    ["tags:developers", "version:"+version]
                ]             
            },
        });
    })()
</script>