<div class="feedback-form-{{location}}-wrapper">
    <div class="feedback-form-wrapper">
        <form class="feedback-form" data-location="{{location}}">
            <div class="top">
                <h6 class="title">FEEDBACK</h6>
            </div>

            <textarea placeholder="Enter your feedback here..." name="feedback" id="feedback"
                      rows="10"></textarea>
            <input type="hidden" name="location" value="{{location}}">

            <div class="opinion-wrapper">
                <button type="submit" class="opinion like" data-location="{{location}}" data-opinion="like">
                    <i class="fa-pif-thumbs-up"></i>
                    This documentation was useful
                </button>

                <button type="submit" class="opinion dislike" data-location="{{location}}" data-opinion="dislike">
                    <i class="fa-pif-thumbs-down"></i>
                    This documentation wasn't useful
                </button>
            </div>
        </form>
        <div class="feedback-submitted d-none">
            Thank you for your feedback.
        </div>
        <i class="fa-pif-add close"></i>
    </div>
</div>

